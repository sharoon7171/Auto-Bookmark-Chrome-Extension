{
  "manifest_version": 3,
  "name": "Auto Bookmark",
  "version": "1.0.0",
  "description": "Automatically bookmark pages based on custom rules.",
  "permissions": [
    "storage",
    "bookmarks",
    "tabs",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "commands": {
    "apply-rules": {
      "description": "Apply bookmarking rules"
    }
  }
}